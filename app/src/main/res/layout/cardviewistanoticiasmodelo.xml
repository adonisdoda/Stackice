<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        >


        <ImageView
            android:id="@+id/imagemNoticia"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:background="@color/colorAccent"
            android:alpha="0.6"

            />

        <TextView
            android:id="@+id/autorNoticia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tecmundo"
            android:textColor="@color/textoTab"
            android:textSize="10dp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/tituloNoticia"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.029"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tituloNoticia"
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:breakStrategy="simple"
            android:maxHeight="100dp"
            android:maxWidth="380dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="saddasfasfffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff"
            android:fontFeatureSettings="@color/colorPrimaryDark"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.384"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.754" />

        <TextView
            android:id="@+id/textPubDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/textoTab"
            android:textSize="8dp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@+id/imagemNoticia"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.945"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tituloNoticia"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/curtirNoticia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="5dp"
            android:text="Curtir"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagemNoticia"
            app:layout_constraintVertical_bias="0.285" />

        <TextView
            android:id="@+id/compartilharNoticia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="5dp"
            android:text="Compartilhar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.947"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagemNoticia"
            app:layout_constraintVertical_bias="0.285" />

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>